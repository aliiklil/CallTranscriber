<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.ac.univie.bachelorarbeit.ss18.calltranscriber.activities.SendMailActivity">


    <EditText
        android:id="@+id/activity_send_mail_email_label"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Email adress"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="18dp" />

    <Button
        android:id="@+id/activity_call_send_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_below="@+id/activity_send_mail_email_label"
        android:layout_centerHorizontal="true"
        android:text="Send"
        android:onClick="onSend" />

</RelativeLayout>
